<idea-plugin version="2">
  <id>com.intellij.smartcity</id>
  <name>Smart City Framework</name>
  <version>1.0</version>
  <vendor email="ruan.cocito@gmail.com" url="http://www.linux.ime.usp.br/~ruan/mac0499/">YourCompany</vendor>

  <description><![CDATA[
      Plugin for the development of Smart City applications
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <framework.type implementation="com.intellij.smartcity.SmartCityFramework"/>
    <toolWindow id="Smart City" icon="/plusIcon.png" anchor="bottom"
                factoryClass="com.intellij.smartcity.SmartCityToolWindowFactory"
                conditionClass="com.intellij.smartcity.SmartCityToolWindowFactory"/>
  </extensions>

  <actions>
    <group id="SmartCity.Toolbar">
      <separator/>
    </group>

    <action id="smartcityrunner" class="com.intellij.smartcity.SmartCitySimulatorRunner" text="Smart City Runner"
            description="Runs the smart city simulator">
      <add-to-group group-id="RunMenu" anchor="last"/>
    </action>

    <!--<group id="SmartCity.ButtonToolBar" text="SmartCity button toolbar" popup="true">-->
    <!--</group>-->

    <action id="SmartCity.RunSimulator" text="Run Simulator" icon="/plusIcon.png"
            class="com.intellij.smartcity.SmartCitySimulatorRunner">
      <add-to-group group-id="SmartCity.Toolbar" anchor="first"/>
    </action>
  </actions>

</idea-plugin>